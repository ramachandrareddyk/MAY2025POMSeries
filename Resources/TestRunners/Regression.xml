<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Opencart Regression Suite" thread-count="3" parallel="tests"
	verbose="4">
	
	<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtentReportListener"></listener>
	</listeners>

	<test name="Account Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.testCases.MyAccountsPageTest" />
		</classes>
	</test> <!--
	Default test -->

	<test name="Login Page Test" verbose="2">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.testCases.LoginPageTest" />
		</classes>
	</test> <!--
	Default test -->

	<test name="Register Page Test" verbose="2">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.testCases.RegisterPageTest" />
		</classes>
	</test> <!--
	Default test -->


</suite> <!--
Default suite -->